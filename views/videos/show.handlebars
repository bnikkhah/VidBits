<div class="contents-container">
  <div class="video-card">
    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>
    <div class="button-wrapper">
      <a href="/videos/{{video._id}}/edit" class="button" id="edit-video-button">Edit</a>
      <form method="post" action="/videos/{{video._id}}/delete" class="delete-form">
        <input type="submit" value="Delete" class="button" id="delete-video-button">
      </form>
    </div>

    <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>
  </div>
</div>
